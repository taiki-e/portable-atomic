{
  "version": "0.2",
  "gitignoreRoot": ".",
  "useGitignore": true,
  "dictionaryDefinitions": [
    {
      "name": "organization-dictionary",
      "path": "./.github/.cspell/organization-dictionary.txt",
      "addWords": true
    },
    {
      "name": "project-dictionary",
      "path": "./.github/.cspell/project-dictionary.txt",
      "addWords": true
    },
    {
      "name": "rust-dependencies",
      "path": "./.github/.cspell/rust-dependencies.txt",
      "addWords": true
    }
  ],
  "dictionaries": [
    "organization-dictionary",
    "project-dictionary",
    "rust-dependencies"
  ],
  "ignoreRegExpList": [
    // Copyright notice
    "Copyright ((\\(c\\)|\\(C\\)|Â©) )?.*",
    // GHA actions/workflows
    "uses: .+@",
    // GHA context (repo name, owner name, etc.)
    "github.\\w+ (=|!)= '.+'",
    // GH username
    "( |\\[)@[\\w_-]+",
    // Git config username
    "git config user.name .*",
    // Cargo.toml authors
    "authors *= *\\[.*\\]",
    "\".* <[\\w_.+-]+@[\\w.-]+>\""
  ],
  "languageSettings": [
    {
      "languageId": ["*"],
      "dictionaries": ["rust"]
    }
  ],
  "ignorePaths": [
    "target-specs/**",
    "tests/helper/src/gen/**",
    "tools/codegen/patches/**",
    "**/*.ld",
    "**/*.x"
  ]
}
